     # Set Vertical ('V') Layout
        self.setLayout(qtw.QVBoxLayout())
        my_label = qtw.QLabel("Please insert name:")

        # Change the font size of label
        my_label.setFont(qtg.QFont('AniMe Matrix - MB_EN', 18))
        self.layout().addWidget(my_label)

        # Create Input Box
        my_entry = qtw.QLineEdit()
        my_entry.setObjectName("input_field")
        my_entry.setText("Insert First Name here!")
        self.layout().addWidget(my_entry)

        #create second Input Box
        my_entry2 = qtw.QLineEdit()
        my_entry2.setObjectName("input_field2")
        my_entry2.setText("Insert Surname Here!")
        self.layout().addWidget(my_entry2)


